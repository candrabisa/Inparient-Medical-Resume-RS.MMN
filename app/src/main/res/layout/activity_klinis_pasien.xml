<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".klinis_pasien">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_kembaliIdenPasien"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Mohon mengisi klinis pasien rawat inap\nsesuai klinis yang diamali pasien"
            android:textSize="15sp"
            android:textColor="@color/orange"
            app:layout_constraintTop_toBottomOf="@id/btn_kembaliIdenPasien"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="24dp"
            android:text="No RM"
            android:textColor="@color/orange"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv1" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_input_active"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5" />

        <LinearLayout
            android:id="@+id/ll_cariDataPasien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:background="@drawable/btn_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/editText"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Cari"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_person_search_24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editText">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:text="Alergi"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alergiPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/bg_input_active"
                android:includeFontPadding="true"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:text="Diagnosis Awal Masuk"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_namaIdenPasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="46dp"
                android:background="@drawable/bg_input_active"
                android:includeFontPadding="true"
                android:padding="8dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="46dp"
                android:paddingEnd="46dp">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="TTD"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_ttdPasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:inputType="number"
                        android:digits="@string/digit_number"
                        android:maxLength="6"
                        android:padding="8dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Resusitasi"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_resusitasiPasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:inputType="number"
                        android:digits="@string/digit_number"
                        android:maxLength="5"
                        android:padding="8dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout4"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout5"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nadi"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_nadiPasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:inputType="number"
                        android:digits="@string/digit_number"
                        android:maxLength="5"
                        android:padding="8dp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="46dp"
                android:paddingEnd="46dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Suhu"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/et_suhuPasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:digits="@string/digit_number"
                        android:inputType="number"
                        android:maxLength="2"
                        android:padding="8dp"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â°"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintEnd_toEndOf="@+id/et_suhuPasien"
                        app:layout_constraintTop_toTopOf="@+id/et_suhuPasien" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Pupil"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_pupilPasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:inputType="number"
                        android:digits="@string/digit_number"
                        android:maxLength="5"
                        android:padding="8dp"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout7"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout6"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="SPO2"
                        android:textColor="@color/orange"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_spo2Pasien"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bg_input_active"
                        android:inputType="number"
                        android:digits="@string/digit_number"
                        android:maxLength="4"
                        android:padding="8dp"
                        android:gravity="center"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:text="Hasil Laboratorium"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_hasilLaboPasien"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="46dp"
                android:background="@drawable/bg_input_satu"
                android:scaleType="centerCrop"
                android:padding="12dp"
                android:src="@drawable/ic_lampiran"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:text="Hasil Radiologi"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_hasilRadioPasien"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="46dp"
                android:background="@drawable/bg_input_satu"
                android:scaleType="centerCrop"
                android:padding="12dp"
                android:src="@drawable/ic_lampiran"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="46dp"
                android:layout_marginTop="12dp"
                android:text="Hasil Penunjang"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <ImageButton
                android:id="@+id/btn_hasilPenunjangPasien"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="46dp"
                android:background="@drawable/bg_input_satu"
                android:scaleType="centerCrop"
                android:padding="12dp"
                android:src="@drawable/ic_lampiran"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>