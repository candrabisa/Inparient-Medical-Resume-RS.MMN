<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">

    <TextView
        android:id="@+id/tv_noRmCari"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:text="No RM"
        android:background="@drawable/bg_table_content_cell"/>

    <TextView
        android:id="@+id/tv_namaPasienCari"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_table_content_cell"
        android:text="Nama Pasien"/>

    <TextView
        android:id="@+id/tv_tglLahirCari"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:text="Tgl Lahir"
        android:background="@drawable/bg_table_content_cell"/>

    <TextView
        android:id="@+id/tv_TglMasukCari"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:text="Tgl Masuk"
        android:background="@drawable/bg_table_content_cell"/>

    <TextView
        android:id="@+id/tv_TglKeluarCari"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:text="Tgl Keluar"
        android:background="@drawable/bg_table_content_cell"/>

    <TextView
        android:id="@+id/tv_ruanganCari"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:text="Ruangan"
        android:background="@drawable/bg_table_content_cell"/>

</LinearLayout>